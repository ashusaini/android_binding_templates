<template format="4"
		revision="1"
		name="New Binding Activity"
		description="create new binding activity">

	<category value="Other"/>

	<parameter id="className"
		name="List Name"
		type="string"
		constraints="class|unique|nonempty"
		default="ListClass"
		help="The name of the functionality that requires MVP views"/>

		<parameter
            id="listItemLayoutName"
            name="Layout name"
            type="string"
            constraints="layout|unique|nonempty"
            default="list_item"
            help="The name of the layout to create for the list item binding"/>

		<parameter
            id="capitaliseListItem"
            name="capitalise above"
            type="string"
            constraints="class|unique|nonempty"
            default="ListItem"
            help="Capitalise above"/>




	<globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>